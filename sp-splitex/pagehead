<script>
  // disable horizontal scroll to prevent swipe back gesture

  var xPos = null;
  var yPos = null;
  window.addEventListener( "touchmove", function ( event ) {
    var touch = event.touches[ 0 ];
    oldX = xPos;
    oldY = yPos;
    xPos = touch.pageX;
    yPos = touch.pageY;
    if ( oldX == null && oldY == null ) {
      return false;
    } else {
      if ( Math.abs( oldX-xPos ) > Math.abs( oldY-yPos ) ) {
        event.preventDefault();
        return false;
      }
    }
  });
</script>

<script>
  // get current currency

  <?php
  // calculate prices in current currency
  $current_currency = \Common\Library\R18\Exchange::init_current_currency();
  ?>
  window.currency = <?php echo "'$current_currency'"; ?> || 'USD';
  console.log('>>> currency: ', window.currency);
</script>

